<div class="page-header">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <h3>Song Library</h3>
      <p>Push the play button <%= link_to icon('play-circle') %> to select a track.
      <% if current_user.is_admin == true or current_user.email == 'philmaclin@gmail.com'  %>
        <%= link_to icon('music'), new_song_path, class: "btn btn-lg btn-success" %>
      <% else %>
        <i class="fa fa-music fa-1x"></i></p>
      <% end %>
    </div>
</div>

<!-- Responsive, Isotope-based layout example -->

<div class="row">
  <div class="col-xs-12">
    <input type="text" id="quicksearch" placeholder="Start typing to find your track" class="form-control">
  </div>
</div>

<hr>

<div class="row isotope-container">
<% @songs.each do |song| %>
  <div class="col-xs-12 col-sm-12 col-md-4 col-lg-3 isotope-item">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= song.artist %></h3>
      </div>
      <div class="panel-body">
        <dl>

          <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <dd><%= image_tag song.art, :height => '200px', :width => '200px', :class => 'img-circle'  %></dd>
          </div>
          <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
          </p>
<!--             <dt>Artist</dt>
            <dd><%= song.artist %></dd> -->

            <!-- <dt>Title:</dt> -->
            <!-- <dd> --><p><i class="fa fa-music fa-1x"></i> "<%= song.title %>" | <%= song.genre %></p><!-- </dd> -->

            <!-- <dt>Genre</dt> -->
    <!--         <dd><%= song.genre %></dd> -->
          </div>

        </dl>

        <div class="btn-group btn-group-justified">
          <%= link_to icon('play-circle'), song, class: "btn btn-primary" %>

          <%= link_to icon('edit'), edit_song_url(song), class: "btn btn-warning" %>

          <%= link_to icon('trash-o'), song, method: :delete, data: { confirm: "Do you really want to delete this song?" }, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>

<!-- JavaScript for Isotope layout and quicksearch -->
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery.imagesloaded/3.1.8/imagesloaded.pkgd.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery.isotope/2.0.0/isotope.pkgd.min.js"></script>
<script>
  $(function() {
    // quick search regex
    var qsRegex;

    // init Isotope
    var $container = $('.isotope-container');

    $container.imagesLoaded(function() {
      $container.isotope({
        itemSelector: '.isotope-item',
        layoutMode: 'masonry',
        filter: function() {
          return qsRegex ? $(this).text().match( qsRegex ) : true;
        }
      })
    });

    // use value of search field to filter
    var $quicksearch = $('#quicksearch').keyup( debounce( function() {
      qsRegex = new RegExp( $quicksearch.val(), 'gi' );
      $container.isotope();
    }, 200 ) );

  });

  // debounce so filtering doesn't happen every millisecond
  function debounce( fn, threshold ) {
    var timeout;
    return function debounced() {
      if ( timeout ) {
        clearTimeout( timeout );
      }
      function delayed() {
        fn();
        timeout = null;
      }
      timeout = setTimeout( delayed, threshold || 100 );
    }
  }
</script>

<!-- End responsive, Isotope-based layout example -->
